{
	"extends": "tslint:recommended",
	"rules": {
		"no-string-throw": true,
		"no-unused-expression": true,
    	"no-duplicate-variable": true,
    	"no-consecutive-blank-lines": true,
    	"no-console": false,
		"curly": true,
    	"class-name": true,
    	"prefer-template": [true, "allow-single-concat"],
    	"quotemark": [true, "single", "avoid-escape", "avoid-template"],
		"semicolon": [
			true,
			"always"
		],
		"triple-equals": true,
		"whitespace": [true,
			"check-branch",
			"check-decl",
			"check-operator",
			"check-module",
			"check-separator",
			"check-rest-spread",
			"check-type",
			"check-typecast",
			"check-type-operator",
			"check-preblock",
			"check-postbrace"
		  ]
	},
	"defaultSeverity": "warning"
}