{
  "name": "vscode-ni-python-dataplugins",
  "displayName": "NI Python DataPlugins",
  "description": "Create and export NI DataPlugins in Python",
  "version": "0.2.0",
  "publisher": "NI",
  "author": "National Instruments",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jschumme/vscode-ni-python-dataplugins/issues"
  },
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/jschumme/vscode-ni-python-dataplugins"
  },
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nipy.createDataPlugin",
        "title": "NI DataPlugins: Create new Python-DataPlugin"
      },
      {
        "command": "nipy.checkSyntax",
        "title": "Verify the code syntax of your DataPlugin",
        "category": "NI DataPlugins"
      },
      {
        "command": "nipy.exportPluginFromContextMenu",
        "title": "NI DataPlugins: Export DataPlugin",
        "category": "NI DataPlugins"
      }
    ],
    "configuration": [
      {
        "title": "Vscode-NI-Python-DataPlugins",
        "properties": {
          "NI-DataPlugins.PluginExportPath": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "description": "Specifies the folder path for plugin export."
          }
        }
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "nipy.exportPluginFromContextMenu",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceLangId == python",
          "command": "nipy.exportPluginFromContextMenu",
          "group": "NI"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "nipy.createDataPlugin",
          "group": "NI"
        }
      ]
    },
    "snippets": [
      {
        "language": "python",
        "path": "./snippets/snippets.json"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "createpkg": "vsce package",
    "depcheck": "npm-check -u",
    "lint": "tslint -p ./ --fix",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "test:e2e": "extest setup-and-run out/test/e2e/*.js",
    "vscode:prepublish": "npm run compile",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.27",
    "@types/vscode": "^1.47.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.2.0",
    "npm-check": "^5.9.2",
    "tslint": "^6.1.3",
    "typescript": "^3.9.7",
    "vsce": "^1.77.0",
    "vscode-extension-tester": "^3.1.0",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "@types/fs-extra": "^9.0.1",
    "@types/uuid": "^8.0.1",
    "fs-extra": "^9.0.1",
    "guid-typescript": "^1.0.9",
    "open": "^7.1.0"
  }
}
